#pragma subsystem(WINDOWS_GUI)

Application.Run(new Form1);

class Form1 : Form
{
	var panel1   = new Panel;
	var textBox1 = new TextBox;
	var button1  = new Button;
	var button2  = new Button;
	var listBox1 = new ListBox;
	
	function ctor
	{
		SetClientSize(256, 256);
		
		panel1.Height = 20;
		panel1.Dock = DockStyle.Top;
		
		button2.Width = 48;
		button2.Text = "削除";
		button2.Dock = DockStyle.Right;
		button2.Click.Add(\ =>
		{
			var index = listBox1.SelectedIndex;
			var t = listBox1.GetText(index);
			if (t == null) return;
			listBox1.DeleteString(index);
			textBox1.Text = t;
		});
		panel1.AddControl(button2);
		
		button1.Width = 48;
		button1.Text = "追加";
		button1.Dock = DockStyle.Right;
		button1.Click.Add(\ =>
		{
			var t = textBox1.Text;
			if (string.IsNullOrEmpty(t)) return;
			listBox1.AddItem(t);
			textBox1.Clear();
		});
		panel1.AddControl(button1);
		
		textBox1.Dock = DockStyle.Fill;
		textBox1.KeyPress.Add(\(sender, e : KeyPressEventArgs) =>
		{
			if (e.KeyChar == 13)
			{
				button1.PerformClick();
				textBox1.Focus();
				e.Handled = true;
			}
		});
		panel1.AddControl(textBox1);
		
		AddControl(panel1);
		
		listBox1.IntegralHeight = false;
		listBox1.Dock = DockStyle.Fill;
		AddControl(listBox1);
	}
}
